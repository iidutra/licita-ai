# Django
DJANGO_SECRET_KEY=change-me-to-a-random-64-char-string
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.development

# PostgreSQL + pgvector
POSTGRES_DB=licitaai
POSTGRES_USER=licitaai
POSTGRES_PASSWORD=licitaai_secret
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# MinIO (S3-compatible)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=licitaai
MINIO_USE_SSL=False
MINIO_EXTERNAL_ENDPOINT=localhost:9000

# AI / LLM (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# PNCP API
PNCP_API_BASE_URL=https://pncp.gov.br/api/consulta
PNCP_RATE_LIMIT_RPM=60

# Compras.gov.br API
COMPRAS_GOV_API_BASE_URL=https://dadosabertos.compras.gov.br
COMPRAS_GOV_RATE_LIMIT_RPM=60

# Notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=licitaai@example.com

WEBHOOK_URL=

# OCR (Tesseract)
TESSERACT_LANG=por
